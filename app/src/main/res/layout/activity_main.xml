<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior colorida -->
    <View
        android:id="@+id/topColorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/strong_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintBottom_toTopOf="@id/bottomColorView" />

    <!-- Parte inferior colorida -->
    <View
        android:id="@+id/bottomColorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_color"
        app:layout_constraintTop_toBottomOf="@id/topColorView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Quadrado em branco no centro da tela -->

    <!-- TextView dentro do quadrado em branco -->

    <View
        android:id="@+id/whiteSquareView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@color/cold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, World!"
        android:radius="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/whiteSquareView"
        app:layout_constraintBottom_toBottomOf="@id/whiteSquareView"
        app:layout_constraintStart_toStartOf="@id/whiteSquareView"
        app:layout_constraintEnd_toEndOf="@id/whiteSquareView"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/chuck_noris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chuck_noris"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/jokes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/jokes"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/chuck_noris"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
